# =========================================
# Production Environment Variables
# Copy to .env and fill all values
# =========================================

# --- Database ---
DB_USER=p2p_prod
DB_PASSWORD=                         # openssl rand -base64 32
DB_NAME=p2p_escrow

# --- Redis ---
REDIS_PASSWORD=                      # openssl rand -base64 32

# --- JWT ---
JWT_SECRET_KEY=                      # openssl rand -hex 32

# --- BSC Mainnet RPC ---
BSC_RPC_URL=https://bsc-dataseed1.binance.org
# BSC_RPC_URL=https://bsc-mainnet.nodereal.io/v1/YOUR_API_KEY   # Premium

# --- Smart Contract Addresses (from deployment) ---
ESCROW_CONTRACT_ADDRESS=0x...
ARBITRATOR_POOL_ADDRESS=0x...

# --- CORS ---
CORS_ORIGINS=["https://yourdomain.com"]

# --- IPFS (Pinata) ---
PINATA_API_KEY=
PINATA_SECRET_KEY=

# --- Grafana ---
GRAFANA_PASSWORD=                    # Admin password for Grafana dashboard
